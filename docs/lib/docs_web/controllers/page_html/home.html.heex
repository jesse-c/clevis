<Layouts.flash_group flash={@flash} />

<!-- Header -->
<header class="relative overflow-hidden bg-gradient-to-br from-primary to-secondary">
  <div class="absolute inset-0 bg-black/10"></div>
  <nav class="relative z-10 flex items-center justify-between p-6 lg:px-8">
    <div class="flex items-center gap-4">
      <h1 class="text-2xl font-bold text-white">Clevis</h1>
    </div>
    <div class="hidden md:flex items-center gap-6">
      <a href="https://github.com/jesse-c/clevis" class="text-white/80 hover:text-white">GitHub</a>
      <a href={~p"/example"} class="text-white/80 hover:text-white">Examples</a>
      <Layouts.theme_toggle />
    </div>
  </nav>
  
  <!-- Hero Section -->
  <div class="relative z-10 px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-4xl text-center">
      <h1 class="text-5xl font-bold tracking-tight text-white sm:text-7xl">
        Keep Your Code in Sync
      </h1>
      <p class="mt-6 text-xl leading-8 text-white/90 max-w-3xl mx-auto">
        Clevis is a command-line tool that ensures values across your codebase stay consistent. 
        Never worry about version mismatches or configuration drift again.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a href="https://github.com/jesse-c/clevis/releases" class="btn btn-lg bg-white text-primary hover:bg-gray-100 border-0">
          Download v0.1.0
        </a>
        <a href="https://github.com/jesse-c/clevis" class="btn btn-lg btn-outline text-white border-white hover:bg-white hover:text-primary">
          View on GitHub
        </a>
      </div>
    </div>
  </div>
</header>

<!-- Features Section -->
